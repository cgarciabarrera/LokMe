<h1>Listing points</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Speed</th>
      <th>Height</th>
      <th>Course</th>
      <th>Accuracy</th>
      <th>Provider</th>
      <th>Timefix</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.latitude %></td>
        <td><%= point.longitude %></td>
        <td><%= point.speed %></td>
        <td><%= point.height %></td>
        <td><%= point.course %></td>
        <td><%= point.accuracy %></td>
        <td><%= point.provider %></td>
        <td><%= point.timefix %></td>
        <td><%= link_to 'Show', point %></td>
        <td><%= link_to 'Edit', edit_point_path(point) %></td>
        <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

